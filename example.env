###############################################
# Rename this file to .env for local development
###############################################

############################
# Core server configuration #
############################
# Network
HOST=0.0.0.0
PORT=5000

# Logging / metrics
LOG_LEVEL=INFO             # DEBUG|INFO|WARNING|ERROR
ENABLE_METRICS=1           # 1=expose /metrics if enabled in app

# Privacy / storage
CONSENT_REQUIRED=1         # require client consent before streaming
STORE_TRANSCRIPTS=0        # 1 to persist transcripts
TRANSCRIPTS_PATH=/data/transcripts

################################
# Audio defaults (minimal server)
################################
DEFAULT_SAMPLE_RATE=48000  # ws-audio minimal server default
DEFAULT_CHANNELS=1
DEFAULT_FRAME_SIZE=480     # 10ms @ 48k

# Denoise
ENABLE_RNNOISE=1           # if rnnoise is installed (Linux), server will use it
NOISE_GATE_THRESHOLD=0.015 # fallback gate threshold (float RMS)
NOISE_GATE_ATTENUATION=0.2 # attenuation when below threshold

########################
# Live interpreter (ASR/MT/TTS)
########################
# Provider selection (local|openai)
ASR_PROVIDER=local
MT_PROVIDER=local
TTS_PROVIDER=local

# Languages
DEFAULT_SRC_LANG=hi
DEFAULT_TGT_LANG=en

# ASR (faster-whisper)
ASR_MODEL_SIZE=tiny        # tiny|base|small|medium|large
ASR_COMPUTE_TYPE=int8      # int8 (CPU dev), fp16/fp32 (GPU)
ASR_DEVICE=cpu             # cpu|cuda

# MT
MT_DEFAULT_SRC=hi
MT_DEFAULT_TGT=en
MT_DEVICE=cpu              # cpu|cuda

# TTS
GTTS_LANG=en
TTS_DEVICE=cpu             # cpu|cuda (if using GPU TTS backends)

# Precision hint for GPU builds
MODEL_PRECISION=fp16       # fp32|fp16|int8

########################
# Optional API keys
########################
## OpenAI (optional)
OPENAI_API_KEY=
OPENAI_ORG=
OPENAI_BASE_URL=           # leave empty for api.openai.com; set for Azure OpenAI
OPENAI_ASR_MODEL=gpt-4o-mini-transcribe
OPENAI_MT_MODEL=gpt-4o-mini
OPENAI_TTS_MODEL=tts-1

AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=
HUGGINGFACE_TOKEN=



